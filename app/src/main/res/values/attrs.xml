<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--这里增加自定义控件的xml属性-->
    <attr name="xs_orientation">
        <enum name="vertical" value="0"/>
        <enum name="horizontal" value="1"/>
    </attr>
    <declare-styleable name="XSeekBar">
        <attr name="xs_radius" format="dimension"/>
        <attr name="xs_MaxHeight" format="dimension"/>
        <attr name="xs_ProgressHeight" format="dimension"/>
        <attr name="xs_MaxColor" format="color"/>
        <attr name="xs_ProgressColor" format="color"/>
        <attr name="xs_BCircleColor" format="color"/>
        <attr name="xs_SCircleColor" format="color"/>
        <attr name="xs_progress" format="integer"/>
        <attr name="xs_max" format="integer"/>
        <attr name="xs_orientation" />
    </declare-styleable>

    <declare-styleable name="IconView">
        <attr name="iv_weight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MoreIconView">
        <attr name="miv_weight" format="dimension"/>
    </declare-styleable>

</resources>